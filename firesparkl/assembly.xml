<assembly>
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>org.fire.spark.streaming:fire-spark</include>
                <include>org.apache.spark:spark-streaming-kafka-0-10_2.11</include>
                <include>org.apache.kafka:kafka_2.11</include>
                <include>org.apache.kafka:kafka-clients</include>
                <include>org.scalaj:scalaj-http_2.11</include>
                <include>com.sensorsdata.analytics.javasdk:SensorsAnalyticsSDK</include>
                <include>com.homework.da:bigdata-tools</include>
                <include>redis.clients:jedis</include>
                <include>org.apache.hbase:hbase-client</include>
                <include>org.apache.hbase:hbase-common</include>
                <include>org.apache.hbase:hbase-server</include>
                <include>org.apache.hbase:hbase-hadoop2-compat</include>
                <include>com.sksamuel.elastic4s:elastic4s-http_2.11</include>
                <include>com.sksamuel.elastic4s:elastic4s-core_2.11</include>
                <include>com.sksamuel.exts:exts_2.11</include>
                <include>com.typesafe:config</include>
                <include>org.elasticsearch.client:elasticsearch-rest-client</include>
                <include>com.squareup.okhttp3:okhttp</include>
                <include>com.squareup.okio:okio</include>
            </includes>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <!--        添加项目自身打包出的jar到lib-->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>README.md</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>deploy</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>run.sh</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>src/main/resources/log4j.properties</source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>
</assembly>
